{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "stripInternal": true,
    "outDir": "dist",
    "esModuleInterop": true
  },
  "files": [
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "__tests__/**/*.test.ts",
    "src/**/*.ts"
  ]
}

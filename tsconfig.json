{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2016",
      "noImplicitAny": false,
      "strictNullChecks": true,
      "preserveConstEnums": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "declaration": true,
      "moduleResolution": "node",
      "stripInternal": true,
      "outDir": "dist",
      "allowJs": false,
      "lib": [
        "es2016",
        "dom"
      ],
      "typeRoots": [
        "node_modules/@types"
      ],
      "noStrictGenericChecks": true
    },
    "files": [
      "src/index.ts"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ],
    "include": [
      "test/**/*.test.ts",
      "src/**/*.ts"
    ]
  }
